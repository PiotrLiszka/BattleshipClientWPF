<Window x:Class="WebSocketClient_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WebSocketClient_WPF"
        mc:Ignorable="d"
        Title="Battleship" Height="800" Width="1200" MinHeight="800" MaxHeight="900" MinWidth="1200" MaxWidth="1400" Loaded="Window_Loaded">
    <!-- Main grid splitting game window into play area and chat area -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width=".7*" />
            <ColumnDefinition Width=".3*" />
        </Grid.ColumnDefinitions>

        <!-- Play area, left side of the window -->
        <Grid Focusable="True" KeyDown="Grid_KeyDown" MouseEnter="GameGrid_MouseEnter" x:Name="GameGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width=".5*" />
                <ColumnDefinition Width=".5*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height=".75*" />
                <RowDefinition Height=".25*" />
            </Grid.RowDefinitions>

            <!-- Player's board -->
            <Border BorderThickness="3,3,3,3" BorderBrush="Black" CornerRadius="5" Padding="2" Margin="2">
                <StackPanel x:Name="PlayerBoardStackPanel" Orientation="Vertical">
                    <Label Content="Your board" HorizontalContentAlignment="Center" Padding="30" FontSize="25"/>
                    <Grid x:Name="PlayerAreaGrid" Margin="5,50,5,5" />
                    <Label Content="{Binding SelectedBox}" HorizontalContentAlignment="Center" />
                </StackPanel>
            </Border>

            <!-- Enemy's board -->
            <Border BorderThickness="3,3,3,3" BorderBrush="Black" CornerRadius="5" Grid.Column="1" Margin="2" Name="EnemyBoard" Visibility="Collapsed">
                <StackPanel>
                    <Label Content="Enemy's board" HorizontalContentAlignment="Center" Padding="30" FontSize="25"/>
                    <Grid x:Name="EnemyAreaGrid" Margin="5,50,5,5" />
                </StackPanel>
            </Border>
            
            <!-- Pre game ship placement -->
            <Border BorderThickness="3,3,3,3" BorderBrush="Black" CornerRadius="5" Grid.Column="1" Margin="2" Name="ShipPlacement">
                <StackPanel>
                    <Label Content="Select ship to place" HorizontalContentAlignment="Center" Padding="30" FontSize="30" />
                    <RadioButton GroupName="ShipGroup" Tag="Size1" Content="Size 1" HorizontalAlignment="Center" FontSize="20" IsChecked="True" Checked="ShipRadioButton_Checked"/>
                    <RadioButton GroupName="ShipGroup" Tag="Size2" Content="Size 2" HorizontalAlignment="Center" FontSize="20" Checked="ShipRadioButton_Checked"/>
                    <RadioButton GroupName="ShipGroup" Tag="Size3" Content="Size 3" HorizontalAlignment="Center" FontSize="20" Checked="ShipRadioButton_Checked"/>
                    <RadioButton GroupName="ShipGroup" Tag="Size4" Content="Size 4" HorizontalAlignment="Center" FontSize="20" Checked="ShipRadioButton_Checked"/>
                </StackPanel>
            </Border>

            <!-- Server connection status -->
            <Label Grid.Row="1" Grid.Column="1" Content="{Binding ServerStatus}" VerticalAlignment="Bottom" HorizontalAlignment="Right" />
            

            <!-- Server and game info panel -->
            <DockPanel Grid.Row="1" Grid.ColumnSpan="2" LastChildFill="False">
                <Border DockPanel.Dock="Left" BorderThickness="2" BorderBrush="Black" Margin="2,2,2,2" CornerRadius="5" MinWidth="530">
                    
                <ScrollViewer VerticalScrollBarVisibility="Auto" CanContentScroll="True" Margin="5,10,5,10">
                    
                    <ItemsControl ItemsSource="{Binding ServerMessages}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    
                </ScrollViewer>
                </Border>
                <Button DockPanel.Dock="Top" Content="SHOT" Padding="10" Margin="10" Click="Button_Click_PlayerShot" />
                <Rectangle  Fill="Black" Height="100" Width="100" RadiusX="20" RadiusY="20"/>
                <Label Content="{Binding ShipOrientation}"/>
                <Label Content="{Binding ShipLength}" />
            </DockPanel>
        </Grid>

        <!-- Chat area, right side of window -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height=".75*" />
                <RowDefinition Height=".25*" />
            </Grid.RowDefinitions>

            <!-- Chat box area -->
            <Border Grid.Row="0" BorderBrush="Black" BorderThickness="2" CornerRadius="5" Margin="2,2,2,2" Visibility="Visible">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height=".1*" />
                        <RowDefinition Height=".9*" />
                    </Grid.RowDefinitions>

                    <Label Content="CHAT" HorizontalAlignment="Center" VerticalAlignment="Center" />
                    <Border BorderBrush="Black" BorderThickness="0,1,0,0" Grid.Row="1">
                        <ScrollViewer x:Name="ChatScroll" Margin="5,10,5,10" VerticalScrollBarVisibility="Auto" CanContentScroll="True">
                            
                            <ItemsControl ItemsSource="{Binding ChatMessages}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}" />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                            
                        </ScrollViewer>
                    </Border>
                </Grid>
            </Border>

            <!-- Chat input and button -->
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height=".6*"/>
                    <RowDefinition Height=".4*" />
                </Grid.RowDefinitions>

                <TextBox x:Name="MessageTextBox" x:FieldModifier="public" Margin="5" MinHeight="50" MaxHeight="100"
                         TextWrapping="Wrap" VerticalAlignment="Stretch"/>
                <Button x:Name="SendMessageButton"  Grid.Row="1" Content="Send Message"
                        Margin="10" MinHeight="30" MaxHeight="50" VerticalAlignment="Center"
                        Click="Button_Click_SendChatMessage"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
